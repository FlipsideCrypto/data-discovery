# Data Discovery API Configuration

# API Server Settings
API_HOST=0.0.0.0
API_PORT=8000

# Application Settings  
DEBUG_MODE=false
DEPLOYMENT_MODE=api
LOG_LEVEL=INFO

# Cache Settings
CACHE_DIR=target
CACHE_TTL_SECONDS=86400

# Resource Limits
MAX_FILE_SIZE=52428800
MAX_PROJECTS=5

# GitHub Integration (Required for repository discovery)
# Create a personal access token at: https://github.com/settings/tokens
# Required scopes: public_repo
GITHUB_TOKEN=ghp_your_token_here