{
  "mcpServers": {
    "fsc-dbt-mcp": {
      "command": "python",
      "args": [
        "/path/to/fsc-dbt-mcp/src/fsc_dbt_mcp/server.py"
      ],
      "env": {
        "DBT_PATH": "/path/to/your/dbt/executable",
        "DBT_PROJECT_DIR": "/path/to/your/dbt/project",
        "DBT_PROFILES_DIR": "/path/to/your/dbt/profiles",
        "DEBUG": "false"
      }
    }
  }
}