{
  "mcpServers": {
    "data-discovery": {
      "command": "/absolute/path/to/.local/bin/uv",
      "args": [
        "--directory",
        "/absolute/path/to/data-discovery",
        "run",
        "src/data_discovery/server.py"
      ],
      "env": {
        "DEBUG_MODE": "false",
        "DEPLOYMENT_MODE": "desktop"
      }
    }
  }
}
